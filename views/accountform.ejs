<% contentFor('body') %>
<div class='container-fluid row'>
    <div class="login margem1 col-8" >
        <form action="/createaccount" method="post" class="was-validated" required>
            <div class='container-fluid row formAccount'>
                <div class="col-6 text-light">

                    <img class='formImgAcc pt-4' src="LOGO.png" alt="Logo" style="width:100%">

                    <div class="form-group mx-4 ">
                        <% if(typeof error!== 'undefined'){%>
                            <% if(error==1){ %>
                                <div class='error bg-danger ml-4'>ERRO Este usuário ja existe</div>
                            <% }else if(error==2){%>
                                <div class='error bg-danger'>ERRO Preencha os campos</div>
                            <% }else if(error==3){%>
                                <div class='error bg-danger'>ERRO Este email ja está cadastrado</div>
                            <% } %> 
                        <% } %>
                    </div>

                    <div class="form-group mx-4 px-4 mt-5">
                        <label class='text-light'for="email">Nome:</label>
                        <input id="name" name='name' class="form-control formInput" type="text" placeholder='nome' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite seu nome.</div>
                    </div>

                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="email">Usuario:</label>
                        <input id="user" name='user' class="form-control formInput" type="text" placeholder='usuário' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite seu nome.</div>
                    </div>
                    <div class="form-group mx-4">
                        <button type="submit" class="botaoLogin text-light ml-4">Fazer Cadastro</button>
                    </div>
                </div>
            
                <div class="col-6 text-light">
                    <div class="form-group mx-4 px-4 mt-5">
                        <label class='text-light'for="email">Email:</label>
                        <input id="email" name='email' class="form-control formInput" type="email" placeholder='exemplo@email.com' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite um email válido.</div>
                    </div>
                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="email">Confirme o email:</label>
                        <input id="email2" name='email2' class="form-control formInput" type="email" placeholder='exemplo@email.com' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite um email válido.</div>
                    </div>
                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="senha">Senha:</label>
                        <input id="password" name='password' class="form-control formInput" type="password" placeholder='*********' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite sua senha.</div>
                    </div>
                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="senha">Confirme a senha:</label>
                        <input id="password2" name='password2' class="form-control formInput" type="password" placeholder='*********' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite sua senha.</div>
                    </div>
                    <a class="btn text-light pl-5 pt-3" href='/'>Voltar a página de login</a>
            </div>
        </form>
    
    <div class=" col-4" >
        <img class='d-block imgAccountForm' src="IMGindexPG.png" alt="Logo" style="width:100%">
    </div>
</div>