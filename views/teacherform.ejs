<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-2 mt-2">
            <a href="/home"><img class='d-block mx-auto' src="LOGO.png" alt="Logo" style="width:80%"></a>
        </div>
        <div class="col-5 mt-2">
        </div>
        <div class="col-1 mt-2"></div>
        <div class="col-4">
            
        </div>
    </div>
</div>
<div class='container-fluid row'>
        <form id='form'action="/teacherform" method="post" class="was-validated margem1" enctype="multipart/form-data" required>
            <div class='container-fluid row'>
                <div class="col-6 text-light">

                    <div class="form-group mx-4 px-4 mt-5">
                        <label class='text-light'for="email">Nome:</label>
                        <input id="name" name='name' class="form-control" type="text" placeholder='nome' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite seu nome.</div>
                    </div>

                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="email">CPF:</label>
                        <input id="cpf" name='cpf' class="form-control" type="text" placeholder='cpf' required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite seu nome.</div>
                    </div>
                </div>
            
                <div class="col-6 text-light">
                    <div class="form-group mx-4 px-4 mt-5">
                        <label class='text-light' for="email" >Formação:</label>
                        <input id="formation" name='formation' class="form-control" type="text" placeholder="formação" required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Digite um email válido.</div>
                    </div>
                    <div class="form-group mx-4 px-4">
                        <label class='text-light'for="senha">Certificado:</label>
                        <input type="file" class="form-control p-1" id="file" name="file" required>
                        <div class="valid-feedback"><img src="valido.png" width="15px"></div>
                        <div class="invalid-feedback">Envie um certificado para análise.</div>
                    </div>
            </div>
            
            <button type="submit" class="px-2 pt-1 pb-2 botaoLogin text-light">Fazer Cadastro</button>
        </form>


    </div>
</div>